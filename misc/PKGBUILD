# Maintainer: CLOAK Team
pkgname=cloak-wallet-bin
pkgver=1.0.0
pkgrel=1
pkgdesc='Privacy wallet for CLOAK on Telos'
arch=('x86_64')
url='https://cloak.today'
license=('MIT')
groups=()
depends=('gtk3' 'gst-plugins-base-libs')
makedepends=()
checkdepends=()
optdepends=()
provides=()
conflicts=()
replaces=()
backup=()
options=()
install=
changelog=
source=(zwallet.tgz::https://github.com/fuck-bitcoin/CLOAK_WALLET/releases/download/v${pkgver}%2B${pkgrel}/zwallet.tgz
	    libzeos_caterpillar.so::https://github.com/fuck-bitcoin/CLOAK_WALLET/releases/download/v${pkgver}%2B${pkgrel}/libzeos_caterpillar.so)
noextract=('zwallet.tgz')
sha256sums=('SKIP'
            'SKIP')

prepare() {
	mkdir -p cloak-wallet
	tar xv -f zwallet.tgz -C cloak-wallet
}

build() {
	cp libzeos_caterpillar.so cloak-wallet/lib
}

package() {
	mkdir -p $pkgdir/usr/bin
	cp -ra $srcdir/cloak-wallet/* $pkgdir/usr/bin
}
